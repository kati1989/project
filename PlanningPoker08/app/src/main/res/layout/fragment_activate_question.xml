<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivateQuestionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewQTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Active Question"
            android:textSize="28dp" />


        <Spinner
            android:id="@+id/groupSelection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:choiceMode="singleChoice" />

        <Spinner
            android:id="@+id/questionListView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:choiceMode="singleChoice" />

        <Button
            android:id="@+id/buttonAddQuestion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="activateQuestion"
            android:text="Activate" />


    </LinearLayout>
</FrameLayout>